{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: FastAPI (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "envFile": "${workspaceFolder}/backend/.env",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Backend: Attach (Container)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Frontend: Vue (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "frontend: dev server"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack: Backend + Frontend",
            "configurations": [
                "Backend: FastAPI (Debug)",
                "Frontend: Vue (Chrome)"
            ]
        },
        {
            "name": "Full Stack (Container): Attach + Frontend",
            "configurations": [
                "Backend: Attach (Container)",
                "Frontend: Vue (Chrome)"
            ]
        }
    ]
}