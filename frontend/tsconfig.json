{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client",
            "unocss/preset-icons"
        ],
        "baseUrl": "./src",
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "env.d.ts"
    ],
    "references": [
        {
            "path": "tsconfig.node.json"
        }
    ]
}